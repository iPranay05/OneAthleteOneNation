{
  "expo": {
    "name": "OneNationOneAthlete",
    "slug": "one-nation-one-athlete",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses motion data to calculate your steps.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice commands and accessibility features.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition for voice commands and accessibility features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.ReactN",
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-build-properties"
    ]
  }
}
